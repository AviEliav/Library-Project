<Window x:Class="Library_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Edit Item" x:Name="btnEditItem" HorizontalAlignment="Center" VerticalAlignment="Center" Height="45" Width="96" Click="btnEditItem_Click" RenderTransformOrigin="0.344,-1.163"/>


        <Label Content="Welcom to Avi's Library" HorizontalAlignment="Center" Margin="0,49,0,0" VerticalAlignment="Top" Height="35" Width="184" FontSize="22" FontFamily="Bahnschrift SemiBold Condensed" RenderTransformOrigin="0.603,0.893"/>
        <Button x:Name="BtnAddItem" Content="Add Item" HorizontalAlignment="Left" VerticalAlignment="Center" Height="45" Width="96" Click="btnAddItem_Click" Margin="186,0,0,0"/>
        <Button x:Name="btnItemList" Content="Items List" HorizontalAlignment="Left" Margin="503,0,0,0" VerticalAlignment="Center" Height="45" Width="95" Click="btnItemList_Click"/>


    </Grid>
</Window>
